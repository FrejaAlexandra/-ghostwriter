
<%= link_to book_path(book), style: "text-decoration: none;" do %>
<div class="my-card grid-item" style="<%= width %>">
  <div class="growth">
    <p>+ 3,6 %</p>
    <p>â‚¬ 3,53</p>
  </div>

  <div class="d-flex">
    <div>
      <img src="https://mpd-biblio-covers.imgix.net/9781250847959.jpg?" class="book-cover" alt="book-cover">
    </div>

    <div class="book-info">
      <h4><%= book.title %></h4>
      <small><%= book.psuedoname %></small>
      <% if book.description.length > 100 %>
        <p><%= book.description.first(100) %>...</p>
      <% else %>
        <p><%= book.description%></p>
      <% end %>
    </div>
  </div>

  <div class="info-bar">
        <p>Queer Author</p>
        <P>Cerebral</P>
        <p>Classic</p>
  </div>
</div>
<% end %>
