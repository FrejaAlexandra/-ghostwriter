<div class="container">
  <section class="d-flex justify-content-between">

    <% if @book.photo.present? %>
      <%= cl_image_tag @book.photo.key, class: "book-cover"%>
    <% else %>
      <img src="https://mpd-biblio-covers.imgix.net/9781250847959.jpg?" class="book-cover" alt="book-cover">
    <% end %>

    <div class="description" data-controller="select-amount">
        <h1><%= @book.title %></h1>
        <h5><i>By <%= @book.psuedoname %></i></h5>

          <div class="value-list">
            <div class="value-list-item">
              <h4>Price</h4>
              <p >€ <span data-select-amount-target="price"> <%= @book.current_share_value.round(2) %></span></p>
            </div>
            <div class="value-list-item">
              <h4>Shares own:</h4>
              <p><%= @share_amount %></p>
            </div>
            <div class="value-list-item">
              <h4>Shares availible:</h4>
              <p><%= @total_shares_remain %></p>
            </div>
          </div>


      <div class="d-flex justify-content-between align-items-center">
        <div>
          <p>Share value </p>
          <p>€ <span data-select-amount-target="text"></span></p>
        </div>
            <%= simple_form_for [@book, @share] do |f| %>
        <%= f.input :share_amount, input_html: { value: 0,  "data-action": "change->select-amount#calculateValue" }, label: "Select amount of shares" %>
        <input type="hidden" id="selected-value" name="selected-value" value="0" data-select-amount-target="value">
        <%= f.submit value: "SELL", class: "button-red", name: 'sell' %>
        <%= f.submit value: "BUY", class: "button-green", name: 'buy' %>
        <% end %>
        <img class="stock-image" src="https://img.freepik.com/premium-vector/forex-trading-stock-market-candlestick-chart-investment-vector-illustration_618588-249.jpg?w=1380" alt="stock-image">
      </div>
    </div>
  </section>

  <div class="info-section">
    <div class="navigation-bar">
      <%= link_to "Description", book_path(@book, section: "description" ) %>
      <%= link_to "Author", book_path(@book, section: "author") %>
      <%= link_to "Financials", book_path(@book, section: "financial") %>
      <%= link_to "Analysis", book_path(@book, section: "analysis") %>
    </div>

    <div class="content-section">
      <% case @section %>
        <% when "description" %>
          <%= render "shared/description", book: @book %>
        <% when "author" %>
          <%= render "shared/author", book: @book %>
        <% when "financial" %>
          <%= render "shared/financial", book: @book %>
        <% else "analysis"%>
          <%= render "shared/analysis", book: @book %>
      <% end %>

    </div>
  </div>
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Back", books_path %>
 </div>
